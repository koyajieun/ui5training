										<Text text="Denise Smith" />
										<Text text="11/15/19" />
										<Text text="12,897.00 EUR" />
									</ColumnListItem>
									<ColumnListItem>
										<Link text="10223882001820" />
										<Text text="Jologa" />
										<Text text="Denise Smith" />
										<Text text="11/15/19" />
										<Text text="12,897.00 EUR" />
									</ColumnListItem>
									<ColumnListItem>
										<Link text="10223882001820" />
										<Text text="Jologa" />
										<Text text="Denise Smith" />
										<Text text="11/15/19" />
										<Text text="12,897.00 EUR" />
									</ColumnListItem>
									<ColumnListItem>
										<Link text="10223882001820" />
										<Text text="Jologa" />
										<Text text="Denise Smith" />
										<Text text="11/15/19" />
										<Text text="12,897.00 EUR" />
									</ColumnListItem>
								</items>
							</Table>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection titleUppercase="false" title="고객정보">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Contact Information">
						<uxap:blocks>
							<forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent"
								layout="ColumnLayout"
								columnsM="2"
								columnsL="3"
								columnsXL="4">
								<core:Title text="연락처" />

								<Label text="회사"/>
								<Text text="{/customer/contract}" />

								<core:Title text="주소" />

								<Label text="기본주소" />
								<Text text="{/customer/address}" />

								<Label text="우편번호"/>
								<Text text="{/customer/email}" />

								<core:Title text="이메일" />

								<Label text="회사" />
								<Text text="{}" />
							</forms:SimpleForm>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>
